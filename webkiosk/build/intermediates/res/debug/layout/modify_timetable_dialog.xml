<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayoutmttd"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:background="#FFFFFF"
    android:gravity="center"
    android:orientation="horizontal" >

    <net.simonvt.numberpicker.NumberPicker
        android:id="@+id/modify_timetable_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:focusable="true"
        android:focusableInTouchMode="true" >
    </net.simonvt.numberpicker.NumberPicker>

    <net.simonvt.numberpicker.NumberPicker
        android:id="@+id/modify_timetable_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="16dp"
        android:layout_toRightOf="@+id/modify_timetable_day"
        android:focusable="true"
        android:focusableInTouchMode="true" >
    </net.simonvt.numberpicker.NumberPicker>

    <EditText
        android:id="@+id/modify_timetable_venue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="16dp"
        android:layout_toRightOf="@+id/modify_timetable_time"
        android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789"
        android:ems="3"
        android:inputType="textFilter"
        android:singleLine="true" >

        <requestFocus />
    </EditText>

</RelativeLayout><!-- From: file:/Users/akshanshsingh/AndroidStudioProjects/Webkiosk/webkiosk/src/main/res/layout/modify_timetable_dialog.xml -->