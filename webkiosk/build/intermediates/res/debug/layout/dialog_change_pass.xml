<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:paddingBottom="@dimen/list_item_vertical_margin"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:background="#F5F5F5"
    android:paddingTop="@dimen/list_item_vertical_margin">

    <TextView
        android:id="@+id/changepass_dialog_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="@string/change_pass_dialog_msg"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <EditText
        android:id="@+id/changepass_dialog_editbox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/changepass_dialog_msg"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:hint="@string/change_pass_dialog_hint"
        android:inputType="textPassword" />

</RelativeLayout>
